<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.ffsys.flash.fluid</groupId>
		<artifactId>fluid-parent</artifactId>
		<version>0.1-SNAPSHOT</version>
	</parent>
	<groupId>com.ffsys.flash.fluid</groupId>
	<artifactId>fluid-web-app</artifactId>
	<version>0.1-SNAPSHOT</version>
	<name>fluid-web-app</name>
	<packaging>swf</packaging>
	<url>http://as3.freeformsystems.com</url>
	<dependencies>
		<dependency>
			<groupId>com.ffsys.flash.flashx.swat</groupId>
			<artifactId>swat-js</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>jar</type>
		</dependency>		
		<dependency>
			<groupId>com.ffsys.flash.fluid</groupId>
			<artifactId>fluid-application</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swf</type>
		</dependency>
	</dependencies>
	<build>
		<!-- <sourceDirectory>src/main/resources</sourceDirectory> -->
		
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					
					<!-- Get the application build -->
					<execution>
						<id>copy-application-build</id>
						<phase>process-sources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<stripVersion>true</stripVersion>
							<artifactItems>
								<artifactItem>
									<groupId>com.ffsys.flash.fluid</groupId>
									<artifactId>fluid-application</artifactId>
									<version>0.1-SNAPSHOT</version>
									<type>swf</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/classes</outputDirectory>
								</artifactItem>
							</artifactItems>
							<overWriteReleases>true</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
					
					<!-- Get the swat js file for easy locale switching -->
					<execution>
						<id>unpack-swat-js</id>
						<phase>process-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>							
								<artifactItem>
									<groupId>com.ffsys.flash.flashx.swat</groupId>
									<artifactId>swat-js</artifactId>
									<version>0.1-SNAPSHOT</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/classes/assets/common/js</outputDirectory>
									<includes>**/*.js</includes>
									<excludes>**/*.class</excludes>
								</artifactItem>
							</artifactItems>
							<overWriteReleases>true</overWriteReleases>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>