<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.ffsys.flash.w3c.impl</groupId>
		<artifactId>fluid-parent</artifactId>
		<version>0.1-SNAPSHOT</version>
	</parent>
	<groupId>com.ffsys.flash.w3c.impl</groupId>
	<artifactId>fluid-application</artifactId>
	<version>0.1-SNAPSHOT</version>
	<name>fluid-application</name>
	<packaging>swf</packaging>
	<url>http://as3.freeformsystems.com</url>
	<dependencies>
		<dependency>
			<groupId>com.ffsys.flash</groupId>
			<artifactId>core</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.ffsys.flash</groupId>
			<artifactId>dom</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.ffsys.flash</groupId>
			<artifactId>net</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.ffsys.flash.java.beans</groupId>
			<artifactId>java-beans-ioc</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.ffsys.flash</groupId>
			<artifactId>swat</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.ffsys.flash.flashx.ui</groupId>
			<artifactId>buttons</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.ffsys.flash.flashx.ui</groupId>
			<artifactId>ui-core</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.ffsys.flash.flashx.ui</groupId>
			<artifactId>css</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
	</dependencies>
	<build>
		<finalName>fluid-application</finalName>
		<plugins>
			<plugin>
				<groupId>org.sonatype.flexmojos</groupId>
				<artifactId>flexmojos-maven-plugin</artifactId>
				<version>${flexmojos.version}</version>
				<extensions>true</extensions>
				<configuration>
					<!-- com/ffsys/ui/suite/view/ComponentSuitePreloader.as | FTEParagraph.as -->
					<sourceFile>${project.build.sourceDirectory}/com/ffsys/fluid/view/ApplicationPreloader.as</sourceFile>
					<targetPlayer>${target.player}</targetPlayer>
					<!-- <debug>${compiler.debug}</debug> -->
					<debug>false</debug>
					<optimize>true</optimize>
					<incremental>true</incremental>
					<linkReport>true</linkReport>
					<configurationReport>true</configurationReport>
					<defaultBackgroundColor>000000</defaultBackgroundColor>
					<defaultSize>
						<width>960</width>
						<height>580</height>
					</defaultSize>
					
					<defaultFrameRate>30</defaultFrameRate>
					<fonts>
						<managers>
							<manager-class>flash.fonts.AFEFontManager</manager-class>
						</managers>
					</fonts>
					<frames>
						<frame>
							<label>main</label>
							<classNames>

								<className>com.ffsys.fluid.core.ApplicationController</className>
								
								<className>org.flashx.ui.graphics.RectangleGraphic</className>
								<className>org.flashx.ui.graphics.SquareGraphic</className>
								<className>org.flashx.ui.graphics.CircleGraphic</className>								
								<className>org.flashx.ui.graphics.EllipseGraphic</className>															
								<className>org.flashx.ui.graphics.ArrowGraphic</className>
								<className>org.flashx.ui.graphics.BevelRectangleGraphic</className>								
								<className>org.flashx.ui.graphics.RoundedRectangleGraphic</className>
								<className>org.flashx.ui.graphics.BorderGraphic</className>
								
								<className>org.flashx.ui.graphics.ArrowPointer</className>
								<className>org.flashx.ui.graphics.SolidFill</className>								
								<className>org.flashx.ui.graphics.BitmapFill</className>																
								<className>org.flashx.ui.graphics.GradientFill</className>
								<className>org.flashx.ui.graphics.CompositeFill</className>
								<className>org.flashx.ui.graphics.Gradient</className>
								<className>org.flashx.ui.graphics.Stroke</className>
							</classNames>
						</frame>
					</frames>
					<locales>
						<locale>en_US</locale>
					</locales>
					<sourcePaths>
						<path>${project.basedir}/src/main/resources</path>
						<path>${project.build.sourceDirectory}</path>
					</sourcePaths>
				</configuration>
			</plugin>
		</plugins>
	</build>	
	<profiles>
		<profile>
			<id>asdoc</id>
			<activation>
				<property>
					<name>asdoc</name>
				</property>
			</activation>		
			<build>
				<plugins>
					<plugin>
						<groupId>org.sonatype.flexmojos</groupId>
						<artifactId>flexmojos-maven-plugin</artifactId>
						<version>${flexmojos.version}</version>
					</plugin>					
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>2.1</version>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>xml-maven-plugin</artifactId>
						<version>1.0-beta-3</version>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>latex-maven-plugin</artifactId>
						<version>1.0</version>
					</plugin>					
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.3</version>
					</plugin>
					
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-install-plugin</artifactId>
						<version>2.3.1</version>
					</plugin>
					
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-deploy-plugin</artifactId>
						<version>2.5</version>
					</plugin>					
				</plugins>		
			</build>
		</profile>
	</profiles>	
</project>