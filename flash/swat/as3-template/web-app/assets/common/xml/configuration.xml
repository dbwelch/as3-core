<?xml version="1.0"?>
<configuration>
	<meta>
		<name>swat - template configuration</name>
		<version>0.1</version>
	</meta>
	<locales>
		<resources>
			<rsls>
				<rsl>
					<trusted>true</trusted>
					<url>swf/application-assets.swf</url>
				</rsl>
			</rsls>
			<xml>
				<resource>
					<url>xml/application-model.xml</url>
				</resource>
			</xml>
			<css>
				<resource>
					<url>css/application.css</url>
				</resource>
				<resource>
					<url>css/filters.css</url>
				</resource>
			</css>
			<messages>
				<resource>
					<url>properties/messages.properties</url>
				</resource>
			</messages>
			<errors>
				<resource>
					<url>properties/errors.properties</url>
				</resource>
			</errors>
			<fonts>
				<resource>
					<url>fonts/fonts.swf</url>
				</resource>
			</fonts>
			<images>
				<resource>
					<url>images/mock-css-image.jpg</url>
				</resource>
			</images>
			<sounds>
				<resource>
					<url>sounds/mock-css-sound.mp3</url>
				</resource>
			</sounds>						
		</resources>
		<default-locale>
			<lang>en</lang>
			<country>GB</country>
		</default-locale>
		<locale>
			<lang>en</lang>
			<country>GB</country>			
			<resources>
				<messages>
					<resource>
						<url>properties/messages.properties</url>
					</resource>
				</messages>
				<errors>
					<resource>
						<url>properties/errors.properties</url>
					</resource>
				</errors>
			</resources>
		</locale>
		<locale>
			<lang>es</lang>
			<country>ES</country>
			<resources>
				<messages>
					<resource>
						<url>properties/messages.properties</url>
					</resource>
				</messages>
			</resources>
		</locale>
		<locale>
			<lang>de</lang>
			<country>DE</country>			
			<resources>
				<messages>
					<resource>
						<url>properties/messages.properties</url>
					</resource>
				</messages>
			</resources>
		</locale>
		<locale>
			<lang>fr</lang>
			<country>FR</country>			
			<resources>
				<messages>
					<resource>
						<url>properties/messages.properties</url>
					</resource>
				</messages>
			</resources>
		</locale>
	</locales>
</configuration>