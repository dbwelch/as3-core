<?xml version="1.0"?>
<document>
	<canvas>
		<vbox>
			<id>vbox</id>
			<spacing>5</spacing>

			<label>
				<styles>title</styles>
				<text>{configuration:meta.name} {configuration:meta.version}</text>
			</label>			
			
			<label>
				<styles>heading</styles>
				<text>System Variables</text>
			</label>
						
			<label>
				<text>Classes: {configuration:flashvars.classes}</text>
			</label>
			
			<label>
				<text>Configuration: {configuration:flashvars.configuration}</text>
			</label>
			
			<label>
				<styles>heading</styles>
				<text>Current Locale</text>
			</label>
			
			<label>
				<text>Language: {locale:lang}</text>	
			</label>
			
			<label>
				<text>Country: {locale:country}</text>
			</label>
			
			<label>
				<text>Prefix: {locale:prefix}</text>
			</label>
			
			<label>
				<text>Path: {paths:locale}</text>
			</label>
			
			<label>
				<styles>heading</styles>
				<text>Paths</text>
			</label>
			
			<label>
				<text>Absolute: {paths:absolute}</text>
			</label>			
			
			<label>
				<text>Base: {paths:base}</text>
			</label>
			
			<label>
				<text>Common: {paths:common}</text>
			</label>			
			
			<label>
				<text>Locales: {paths:locales}</text>
			</label>
			
			<label>
				<text>Total locales: {configuration:locales.length}</text>
			</label>						
		</vbox>
	</canvas>
</document>