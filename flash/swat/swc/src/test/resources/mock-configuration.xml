<?xml version="1.0"?>
<configuration>
	
	<!--
		Application meta data.
	-->
	<meta>
		<name>swat - mock application</name>
		<version>0.1a</version>
	</meta>
	
	<!--
		Global path configuration.
	-->
	<paths>
		<absolute>false</absolute>
		<base>mock-assets</base>
		<common>common</common>
		<locales>locales</locales>
	</paths>
	
	<locales>
		<!--
			Resources for all locales.
			
			Paths are resolved relative to the common directory.
		-->
		<resources>
			<rsls>
				<rsl>
					<trusted>true</trusted>
					<url>swf/mock-assets.swf</url>
				</rsl>
			</rsls>
			<beans>
				<resource>
					<url>css/mock-beans.css</url>
				</resource>
			</beans>
			<xml>
				<resource>
					<url>xml/test.xml</url>
				</resource>
			</xml>
			<css>
				<resource>
					<url>css/mock-ui-components.css</url>
				</resource>
				<resource>
					<url>css/mock-graphics.css</url>
				</resource>
				<resource>
					<url>css/mock-text.css</url>
				</resource>				
				<resource>
					<url>css/mock-animations.css</url>
				</resource>				
				<resource>
					<url>css/mock-filters.css</url>
				</resource>
				<resource>
					<url>css/mock-styles.css</url>
				</resource>				
			</css>
			<messages>
				<resource>
					<url>properties/messages.properties</url>
				</resource>
			</messages>
			<errors>
				<resource>
					<url>properties/errors.properties</url>
				</resource>
			</errors>
			<images>
				<resource>
					<url>images/mock-image-001.jpg</url>
				</resource>
				<resource>
					<url>images/mock-image-002.jpg</url>
				</resource>
			</images>
			<fonts>
				<resource>
					<url>fonts/fonts.swf</url>
				</resource>
			</fonts>			
		</resources>
		
		<!-- The default fallback locale -->
		<default-locale lang="en" country="GB" />
		
		<!-- Locale definitions -->
		<locale lang="en" country="GB">
			
			<resources>
				<messages>
					<resource>
						<url>properties/messages.properties</url>
					</resource>
				</messages>
			
				<errors>
					<resource>
						<url>properties/errors.properties</url>
					</resource>
				</errors>
				
			</resources>
		</locale>
		
		<locale lang="es" country="ES">
			<resources>
				<messages>
					<resource>
						<url>properties/messages.properties</url>
					</resource>
				</messages>
			</resources>
		</locale>
		
		<locale lang="de" country="DE">
			<resources>
				<messages>
					<resource>
						<url>properties/messages.properties</url>
					</resource>
				</messages>
			</resources>
		</locale>
		<locale lang="fr" country="FR">
			<resources>
				<messages>
					<resource>
						<url>properties/messages.properties</url>
					</resource>
				</messages>
			</resources>
		</locale>
	</locales>
</configuration>