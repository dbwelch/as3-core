<?xml version="1.0"?>
<configuration>
	
	<meta>
		<name>mock configuration document</name>
		<version>0.4a</version>
	</meta>
	
	<paths>
		<absolute>false</absolute>
		<base>assets</base>
		<common>common</common>
		<locales>locales</locales>
	</paths>
	
	<locales>
		
		<!-- applies to all locales -->
		
		<settings>
			
		</settings>
		
		<assets id="main">
			
		</assets>

		<!-- resources for all locales -->
		<resources>
			
			<rsls>
				<rsl>
					<trusted>true</trusted>
					<url>/////swf/application-assets.swf</url>
				</rsl>
			</rsls>
			
				
			<xml>
				<resource>
					<url>/xml/test.xml</url>
				</resource>
			</xml>
			
			<css>
				<resource>
					<id>test-css</id>
					<url>/css/test.css</url>
				</resource>
				<resource>
					<id>test-filters</id>
					<url>/css/filters.css</url>
				</resource>
			</css>
			
			<messages>
				<resource>
					<url>/properties/messages-common.properties</url>
				</resource>
			</messages>
		
			<errors>
				<resource>
					<url>/properties/errors-common.properties</url>
				</resource>
			</errors>
			
			<images>
				<resource>
					<id>garden-001</id>
					<url>/images/garden-001.jpg</url>
				</resource>
				<resource>
					<id>garden-002</id>
					<url>/images/garden-002.jpg</url>
				</resource>
			</images>
		</resources>
		
		<!-- The default fallback locale -->
		<default-locale lang="en" country="GB" />
		
		<!-- Locale definitions -->
		<locale lang="en" country="GB">
			
			<resources>
				<messages>
					<resource>
						<url>/properties/messages.properties</url>
					</resource>
				</messages>
			
				<errors>
					<resource>
						<url>/properties/errors.properties</url>
					</resource>
				</errors>
			
				<fonts>
					<resource>
						<url>/fonts/fonts.swf</url>
					</resource>
				</fonts>
				
			</resources>
		</locale>
		
		<locale lang="es" country="ES">
			<resources>
				<messages>
					<resource>
						<url>/properties/messages.properties</url>
					</resource>
				</messages>
			</resources>
		</locale>
		
		<locale lang="de" country="DE">
			<resources>
				<messages>
					<resource>
						<url>/properties/messages.properties</url>
					</resource>
				</messages>
			</resources>
		</locale>
		
		<locale lang="fr" country="FR">
			<resources>
				<messages>
					<resource>
						<url>/properties/messages.properties</url>
					</resource>
				</messages>
			</resources>
		</locale>
		
	</locales>
	
</configuration>