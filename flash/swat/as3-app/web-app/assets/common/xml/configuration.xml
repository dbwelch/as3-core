<?xml version="1.0"?>
<configuration>
	
	<meta>
		<name>swat - application framework</name>
		<version>0.4a</version>
	</meta>
	
	<!--
	<paths>
		<base>http://localhost</base>
	</paths>
	-->
	
	<locales>
		<!-- resources for all locales -->
		<resources>
			
			<rsls>
				<rsl>
					<trusted>true</trusted>
					<url>swf/application-assets.swf</url>
				</rsl>
				
				<!--
				<rsl>
					<trusted>true</trusted>
					<url>swf/application-assets-404.swf</url>
				</rsl>
				-->
							
			</rsls>
			
			<beans>
				<resource>
					<url>css/beans.css</url>
				</resource>
			</beans>
				
			<xml>
				<resource>
					<url>xml/test.xml</url>
				</resource>
			</xml>
			
			<css>
				<resource>
					<url>css/web-app.css</url>
				</resource>
				<resource>
					<url>css/animations.css</url>
				</resource>				
				<resource>
					<id>test-filters</id>
					<url>css/filters.css</url>
				</resource>
			</css>
			
			<components>
				<id>components</id>
				<component>
					<id>model</id>
					<beans>
						<resource>
							<url>css/model-beans.css</url>
						</resource>
					</beans>
					<xml-beans>
						<resource>
							<url>xml/model.xml</url>
						</resource>
					</xml-beans>
				</component>
				
				
				<view>
					<id>view</id>
					<xml>
						<resource>
							<url>xml/view.xml</url>
						</resource>
					</xml>
				</view>
				
			</components>
			
			<messages>
				<resource>
					<url>properties/messages.properties</url>
				</resource>
			</messages>
		
			<errors>
				<resource>
					<url>properties/errors.properties</url>
				</resource>
			</errors>
			
			<images>
				<resource>
					<id>garden-001</id>
					<url>images/garden-001.jpg</url>
				</resource>
				<resource>
					<id>garden-002</id>
					<url>images/garden-002.jpg</url>
				</resource>
			</images>
			
			<fonts>
				<resource>
					<url>fonts/fonts.swf</url>
				</resource>
			</fonts>			
		</resources>
		
		<!-- The default fallback locale -->
		<default-locale lang="en" country="GB" />
		
		<!-- Locale definitions -->
		<locale lang="en" country="GB">
			
			<resources>
				<messages>
					<resource>
						<url>properties/messages.properties</url>
					</resource>
				</messages>
			
				<errors>
					<resource>
						<url>properties/errors.properties</url>
					</resource>
				</errors>
				
			</resources>
		</locale>
		
		<locale lang="es" country="ES">
			<resources>
				<messages>
					<resource>
						<url>properties/messages.properties</url>
					</resource>
				</messages>
			</resources>
		</locale>
		
		<locale lang="de" country="DE">
			<resources>
				<messages>
					<resource>
						<url>properties/messages.properties</url>
					</resource>
				</messages>
			</resources>
		</locale>
		<locale lang="fr" country="FR">
			<resources>
				<messages>
					<resource>
						<url>properties/messages.properties</url>
					</resource>
				</messages>
			</resources>
		</locale>
	</locales>
	
</configuration>