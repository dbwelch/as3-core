<document>
	<css>
		<file>view-common.css</file>
	</css>
	<canvas>
		<vbox>
			<!-- <button>button text</button> -->
			
			<id>vbox</id>
			<spacing>10</spacing>
			
			<label>
				<text>Currently running with locale (.АПбвгеийклмнорстщ) path {paths:locale} as locale: {locale:country}</text>
				<!-- <filters>drop-shadow</filters> -->
				<blend-mode>invert</blend-mode>		
				<!-- <selectable>true</selectable> -->
			</label>
			
			<label>
				<id>copy</id>
				<styles>copy copy-override</styles>
				<text>this is some copy text for you</text>
				<!-- <filters>drop-shadow</filters>	 -->
				<!--
				
