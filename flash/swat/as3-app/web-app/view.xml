				</cell>
				<cell>
					<preferred-width>80</preferred-width>
					<preferred-height>80</preferred-height>
					<layout>
						<horizontal-align>right</horizontal-align>
						<vertical-align>bottom</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>
				<cell>
					<preferred-width>80</preferred-width>
					<preferred-height>80</preferred-height>
					<layout>
						<horizontal-align>left</horizontal-align>
						<vertical-align>bottom</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>							
			</hbox>
			
			<canvas>				
				<scroller>
					<!-- <target>{scrollTarget}</target> -->
					<preferred-width>200</preferred-width>
					<preferred-height>200</preferred-height>		
				</scroller>
			</canvas>
		</vbox>
