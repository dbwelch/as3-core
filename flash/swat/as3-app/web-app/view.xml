<?xml version="1.0"?>
<document>
	
	<css>
		<file>view-common.css</file>
	</css>
	
	<canvas>
		<vbox>
			
			<button>
				<id>btn</id>
				<preferred-width>100</preferred-width>
				<preferred-height>16</preferred-height>
				<text>button text</text>
			</button>
			
			<id>vbox</id>
			<spacing>5</spacing>
			
			<label>
				<text>Currently ({binding:title}) - ({binding:another}) running with locale path {paths:locale} as locale: {locale:country}</text>
				<!-- <filters>drop-shadow</filters> -->
				<blend-mode>invert</blend-mode>		
				<!-- <selectable>true</selectable> -->
			</label>
			
			<label>
				<id>copy</id>
				<styles>copy copy-override</styles>
				<text>this is some copy text for you</text>
			</label>
			
			<each>
				<provider>{binding:items}</provider>
				<label>
					<text><![CDATA[{it:key} > {it:value}]]></text>
				</label>
			</each>
			
			<hbox>
				<spacing>10</spacing>
				<each>
					<provider>{binding:locales}</provider>
					<vbox>
						<spacing>0</spacing>
						<label>
							<text><![CDATA[{it:value.lang}]]></text>
						</label>
						<label>
							<text><![CDATA[{it:value.country}]]></text>
						</label>
						<label>
							<text><![CDATA[{it:value.prefix}]]></text>
						</label>
					</vbox>
				</each>
			</hbox>
			
			<hbox>
				<spacing>10</spacing>
				<rect>
					<preferred-width>25</preferred-width>
					<preferred-height>25</preferred-height>
					<fill>
						<color>0xff6600</color>
						<alpha>.5</alpha>
					</fill>
					<stroke>
						<thickness>1</thickness>
						<color>0xff0000</color>
					</stroke>
				</rect>
				<label styles="lbl">
					<text>This is a graphic that was rendered from an xml declaration.</text>
				</label>
			</hbox>
			
			<hbox>
				<spacing>10</spacing>
				<cell>
					<preferred-width>80</preferred-width>
					<preferred-height>80</preferred-height>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model>
						<blend-mode>invert</blend-mode>
					</box-model>
				</cell>
				<cell>
					<preferred-width>80</preferred-width>
					<preferred-height>80</preferred-height>
					<layout>
						<horizontal-align>left</horizontal-align>
						<vertical-align>top</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>
				<cell>
					<preferred-width>80</preferred-width>
					<preferred-height>80</preferred-height>
					<layout>
						<horizontal-align>right</horizontal-align>
						<vertical-align>top</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>
				<cell>
					<preferred-width>80</preferred-width>
					<preferred-height>80</preferred-height>
					<layout>
						<horizontal-align>right</horizontal-align>
						<vertical-align>bottom</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>
				<cell>
					<preferred-width>80</preferred-width>
					<preferred-height>80</preferred-height>
					<layout>
						<horizontal-align>left</horizontal-align>
						<vertical-align>bottom</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>							
			</hbox>
			
			<canvas>				
				<scroller>
					<!-- <target>{scrollTarget}</target> -->
					<preferred-width>200</preferred-width>
					<preferred-height>200</preferred-height>		
				</scroller>
			</canvas>
		</vbox>
	</canvas>
</document>