<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>ui</artifactId>
		<groupId>com.ffsys.flash.flashx</groupId>
		<version>0.1-SNAPSHOT</version>
	</parent>
	<groupId>com.ffsys.flash.flashx.ui</groupId>
	<version>0.1-SNAPSHOT</version>
	<artifactId>ui-components-suite</artifactId>
	<packaging>swf</packaging>
	<name>ui-components-suite</name>
	<dependencies>
		<dependency>
			<groupId>com.adobe.flex.framework</groupId>
			<artifactId>framework</artifactId>
			<version>${flex.version}</version>
			<type>swc</type>
			<scope>external</scope>
		</dependency>
		
		<!--
		<dependency>
			<groupId>com.adobe.flex.framework</groupId>
			<artifactId>spark</artifactId>
			<version>${flex.version}</version>
			<type>swc</type>
			<scope>external</scope>
		</dependency>		
		-->
		
		<dependency>
			<groupId>com.adobe.flex.framework</groupId>
			<artifactId>sparkskins</artifactId>
			<version>${flex.version}</version>
			<type>swc</type>
			<scope>external</scope>
		</dependency>
		
		<dependency>
			<groupId>com.ffsys.flash.flashx</groupId>
			<artifactId>effects</artifactId>
			<version>${ffsys.lib.version}</version>
			<type>swc</type>
		</dependency>		
		<dependency>
			<groupId>com.ffsys.flash.flashx</groupId>
			<artifactId>swat</artifactId>
			<version>${ffsys.lib.version}</version>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.ffsys.flash.flashx.ui</groupId>
			<artifactId>loaders</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.ffsys.flash.flashx.ui</groupId>
			<artifactId>runtime</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.ffsys.flash.flashx.ui</groupId>
			<artifactId>tooltips</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.ffsys.flash.flashx.ui</groupId>
			<artifactId>display</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>								
		<dependency>
			<groupId>com.ffsys.flash.flashx.ui</groupId>
			<artifactId>text-core</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
		<dependency>
			<groupId>com.ffsys.flash.flashx.util</groupId>
			<artifactId>random</artifactId>
			<version>0.1-SNAPSHOT</version>
			<type>swc</type>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.sonatype.flexmojos</groupId>
				<artifactId>flexmojos-maven-plugin</artifactId>
				<version>${flexmojos.version}</version>
				<extensions>true</extensions>
				<configuration>
					<!-- com/ffsys/ui/suite/view/ComponentSuitePreloader.as | FTEParagraph.as -->
					<sourceFile>${project.build.sourceDirectory}/com/ffsys/ui/suite/view/ComponentSuitePreloader.as</sourceFile>
					<targetPlayer>${target.player}</targetPlayer>
					<!-- <debug>${compiler.debug}</debug> -->
					<debug>true</debug>
					<optimize>true</optimize>
					<incremental>true</incremental>
					<linkReport>true</linkReport>
					<configurationReport>true</configurationReport>
					<defaultBackgroundColor>000000</defaultBackgroundColor>
					<defaultSize>
						<width>960</width>
						<height>580</height>
					</defaultSize>					
					
					<defaultFrameRate>30</defaultFrameRate>
					<fonts>
						<managers>
							<manager-class>flash.fonts.AFEFontManager</manager-class>
						</managers>
					</fonts>
					<frames>
						<frame>
							<label>main</label>
							<classNames>
								<className>org.flashx.ui.suite.core.ComponentSuiteController</className>
								<className>org.flashx.ui.suite.view.PageHeader</className>
								
								<className>org.flashx.ui.graphics.RectangleGraphic</className>
								<className>org.flashx.ui.graphics.SquareGraphic</className>
								<className>org.flashx.ui.graphics.CircleGraphic</className>								
								<className>org.flashx.ui.graphics.EllipseGraphic</className>															
								<className>org.flashx.ui.graphics.ArrowGraphic</className>
								<className>org.flashx.ui.graphics.BevelRectangleGraphic</className>								
								<className>org.flashx.ui.graphics.RoundedRectangleGraphic</className>
								<className>org.flashx.ui.graphics.BorderGraphic</className>
								
								<className>org.flashx.ui.graphics.ArrowPointer</className>
								<className>org.flashx.ui.graphics.SolidFill</className>								
								<className>org.flashx.ui.graphics.BitmapFill</className>																
								<className>org.flashx.ui.graphics.GradientFill</className>
								<className>org.flashx.ui.graphics.CompositeFill</className>
								<className>org.flashx.ui.graphics.Gradient</className>
								<className>org.flashx.ui.graphics.Stroke</className>
							</classNames>
						</frame>
					</frames>
					<locales>
						<locale>en_US</locale>
					</locales>
					<sourcePaths>
						<path>${project.basedir}/src/main/resources</path>
						<path>${project.build.sourceDirectory}</path>
					</sourcePaths>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<id>copy-to-webapp</id>
						<phase>package</phase>
						<configuration>
							<tasks>
								<copy
									file="${project.build.directory}/${project.build.finalName}.swf"
									toDir="${project.basedir}/web-app" overwrite="true" verbose="true"/>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>asdoc</id>
			<activation>
				<property>
					<name>asdoc</name>
				</property>
			</activation>		
			<build>
				<plugins>
					<plugin>
						<groupId>org.sonatype.flexmojos</groupId>
						<artifactId>flexmojos-maven-plugin</artifactId>
						<version>${flexmojos.version}</version>
					</plugin>					
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>2.1</version>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>xml-maven-plugin</artifactId>
						<version>1.0-beta-3</version>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>latex-maven-plugin</artifactId>
						<version>1.0</version>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.3</version>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-install-plugin</artifactId>
						<version>2.3.1</version>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-deploy-plugin</artifactId>
						<version>2.5</version>
						<executions>
							<execution>
								<id>deploy-api-docs</id>
								<phase>deploy</phase>
								<goals>
									<goal>deploy-file</goal>
								</goals>
								<configuration>
									<groupId>${project.groupId}</groupId>
									<artifactId>${project.artifactId}</artifactId>
									<version>${project.version}</version>
									<packaging>${api.docs.packaging}</packaging>
									<file>${project.build.directory}/${project.build.finalName}.${api.docs.packaging}</file>										
									<repositoryId>ffsys-mvn</repositoryId>
									<url>scp://freeformsystems.com/usr/local/sonatype-work/nexus/storage/snapshots</url>
								</configuration>
							</execution>
						</executions>
					</plugin>										
				</plugins>		
			</build>
		</profile>
	</profiles>	
</project>