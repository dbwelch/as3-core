<?xml version="1.0"?>
<document
	xmlns:framework="http://freeformsystems.com/as3/framework"
	xmlns:ui="http://freeformsystems.com/as3/ui"
	xmlns:application="http://freeformsystems.com/as3/ui/suite"
	xmlns:css="http://freeformsystems.com/as3/ui/suite/css">
	<css>
		<![CDATA[
			myTestInlineStyle {
				color: #ff6600;
			}
		]]>
	</css>
	<radio-button-group>
		<id>fruit-radio-buttons</id>
	</radio-button-group>
	
	<vbox>
		
		<!--
		<framework:configuration />
		-->
		
		<!--
		<css:test-css-xml-namespace-bean>
		
		</css:test-css-xml-namespace-bean>
		-->
		
		<styles>page-heading</styles>
		<h3 id="page-package-heading">
			<!-- <id>page-package-heading</id>
			<styles>package-heading</styles> -->
			<identifier>buttons.package</identifier>
		</h3>
		<hbox>
			<spacing>25</spacing>
			<vbox>
				<id>text-buttons</id>
				<styles>column</styles>
				<vbox>
					<styles>example-group</styles>
					<label>
						<styles>element</styles>
						<identifier>elements.textbutton</identifier>
					</label>
					<p>
						<identifier>buttons.examples.text.copy</identifier>
					</p>
					<text-button>
						<identifier>buttons.examples.text</identifier>
					</text-button>
					<text-button>
						<identifier>buttons.examples.text.disabled</identifier>
						<enabled>false</enabled>
					</text-button>
				</vbox>
				<hrule/>
				<vbox>
					<styles>example-group</styles>
					<label>
						<styles>element</styles>
						<identifier>elements.button</identifier>
					</label>
					<p>
						<identifier>buttons.examples.standard.copy</identifier>
					</p>
					<button>
						<identifier>buttons.examples.standard</identifier>
					</button>
					<button>
						<identifier>buttons.examples.standard.disabled</identifier>
						<enabled>false</enabled>
					</button>
				</vbox>
				<hrule/>
				<vbox>
					<styles>example-group</styles>
					<label>
						<styles>element</styles>
						<identifier>elements.iconbutton</identifier>
					</label>
					<p>
						<identifier>buttons.examples.icon.copy</identifier>
					</p>
					<icon-button>
						<id>icon-state-test</id>
						<styles>default-icon</styles>
					</icon-button>
					<icon-button>
						<id>icon-state-test</id>
						<styles>default-icon</styles>
						<identifier>buttons.examples.icon</identifier>
					</icon-button>
					<icon-button>
						<id>icon-state-test</id>
						<styles>default-icon</styles>
						<identifier>buttons.examples.icon.disabled</identifier>
						<enabled>false</enabled>
					</icon-button>
				</vbox>
				<hrule/>
				<vbox>
					<styles>example-group</styles>
					<label>
						<styles>element</styles>
						<identifier>elements.icontextbutton</identifier>
					</label>
					<p>
						<identifier>buttons.examples.icontext.copy</identifier>
					</p>
					<icon-text-button>
						<id>icon-state-test</id>
						<styles>default-icon</styles>
					</icon-text-button>
					<icon-text-button>
						<id>icon-state-test</id>
						<styles>default-icon</styles>
						<identifier>buttons.examples.icon.text</identifier>
					</icon-text-button>
					<icon-text-button>
						<id>icon-state-test</id>
						<styles>default-icon</styles>
						<identifier>buttons.examples.icon.text.disabled</identifier>
						<enabled>false</enabled>
					</icon-text-button>
				</vbox>
			</vbox>
			<vrule/>
			<vbox>
				<styles>column</styles>
				<vbox>
					<styles>example-group</styles>
					<label>
						<styles>element</styles>
						<identifier>elements.radiobutton</identifier>
					</label>
					<p>
						<identifier>buttons.examples.radio.copy</identifier>
					</p>
					<radio-button>
						<identifier>buttons.examples.radio</identifier>
					</radio-button>
					<radio-button>
						<identifier>buttons.examples.radio.disabled</identifier>
						<enabled>false</enabled>
					</radio-button>
					<radio-button>
						<identifier>buttons.examples.radio.selected</identifier>
						<enabled>false</enabled>
						<selected>true</selected>
					</radio-button>
				</vbox>
				<vbox>
					<styles>example-group</styles>
					<p>
						<identifier>buttons.examples.radio.copy.group</identifier>
					</p>
					<radio-button>
						<identifier>fruit.apples</identifier>
						<selected>true</selected>
						<group-manager>
							<id>fruit-radio-buttons</id>
						</group-manager>
					</radio-button>
					<radio-button>
						<identifier>fruit.oranges</identifier>
						<selected>true</selected>
						<group-manager>
							<id>fruit-radio-buttons</id>
						</group-manager>
					</radio-button>
					<radio-button>
						<identifier>fruit.pears</identifier>
						<selected>true</selected>
						<group-manager>
							<id>fruit-radio-buttons</id>
						</group-manager>
					</radio-button>
				</vbox>
				<hrule/>
				<vbox>
					<styles>example-group</styles>
					<label>
						<styles>element</styles>
						<identifier>elements.checkbox</identifier>
					</label>
					<p>
						<identifier>buttons.examples.checkbox.copy</identifier>
					</p>
					<check-box>
						<identifier>buttons.examples.checkbox</identifier>
					</check-box>
					<check-box>
						<identifier>buttons.examples.checkbox.disabled</identifier>
						<enabled>false</enabled>
					</check-box>
					<check-box>
						<identifier>buttons.examples.checkbox.selected</identifier>
						<enabled>false</enabled>
						<selected>true</selected>
					</check-box>
				</vbox>
				<hrule/>
				<vbox>
					<styles>example-group</styles>
					<label>
						<styles>element</styles>
						<identifier>elements.togglebutton</identifier>
					</label>
					<p>
						<identifier>buttons.examples.toggle.copy</identifier>
					</p>
					<hbox>
						<toggle-button>
							<id>toggle-button</id>
							<identifier>buttons.examples.toggle</identifier>
						</toggle-button>
						<toggle-button>
							<identifier>buttons.examples.toggle.disabled</identifier>
							<enabled>false</enabled>
						</toggle-button>
					</hbox>
					<toggle-button>
						<id>filter-toggle-button</id>
						<styles>toggle-button-filter</styles>
						<identifier>buttons.examples.toggle.filter</identifier>
					</toggle-button>
				</vbox>
			</vbox>
			<vrule/>
			<vbox>
				<styles>column</styles>
				<vbox>
					<styles>example-group</styles>
					<p>
						<identifier>buttons.examples.urllink.copy</identifier>
					</p>
					<a href="http://google.com">http://google.com</a>
				</vbox>
			</vbox>
		</hbox>
	</vbox>
</document>