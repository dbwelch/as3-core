package com.ffsys.ui.text
{
	/**
	*	Encapsulates constants that describe the available
	* 	text transformations.
	*
	*	@langversion ActionScript 3.0
	*	@playerversion Flash 9.0
	*
	*	@author Mischa Williamson
	*	@since  30.12.2010
	*/
	public class TextTransform extends Object
	{
		/**
		* 	Indicates no text transformation.
		*/
		public static const NONE:String = "none";
		
		/**
		* 	Represents an upper case text transformation.
		*/
		public static const UPPERCASE:String = "uppercase";
	
		/**
		* 	Represents a lower case text transformation.
		*/
		public static const LOWERCASE:String = "lowercase";
	
		/**
		* 	Represents an underline text transformation.
		*/
		public static const UNDERLINE:String = "underline";		
	}
}