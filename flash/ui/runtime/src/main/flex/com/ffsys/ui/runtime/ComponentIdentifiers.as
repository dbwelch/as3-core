	*	@playerversion Flash 9.0
	*
	*	@author Mischa Williamson
	*	@since  28.12.2010
	*/
	public class ComponentIdentifiers extends Object
	{
		
		/**
		* 	The identifier for a document component.
		*/
		public static const DOCUMENT:String = "document";		
		
		/**
		* 	The identifier for a canvas component.
		*/
		public static const CANVAS:String = "canvas";
		
		/**
		* 	The identifier for a container component.
		*/
		public static const CONTAINER:String = "container";	
		
		/**
		* 	The identifier for a layout component.
		*/
		public static const LAYOUT:String = "layout";
			
		/**
		* 	The identifier for a horizontal layout component.
		*/
		public static const HORIZONTAL_LAYOUT:String = "horizontal-layout";		
		
		/**
		* 	The identifier for a vertical layout component.
		*/
		public static const VERTICAL_LAYOUT:String = "vertical-layout";
	
		/**
		* 	The identifier for a cell component.
		*/
		public static const CELL:String = "cell";			
		
		/**
		* 	The identifier for a horizontal box component.
		*/
		public static const HBOX:String = "hbox";
	
		/**
		* 	The identifier for a vertical box component.
		*/
		public static const VBOX:String = "vbox";
		
		/**
		* 	The identifier for a list component.
		*/
		public static const LIST:String = "list";
		
		/**
		* 	The identifier for a graphic component.
		*/
		public static const GRAPHIC:String = "graphic";
		
		/**
		* 	The identifier for a bitmap graphic component.
		*/
		public static const BITMAP_GRAPHIC:String = "bitmap-graphic";
		
