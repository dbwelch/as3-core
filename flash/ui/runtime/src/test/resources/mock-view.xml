<?xml version="1.0"?>
<document>
	<canvas>
		<vbox>
			<id>vbox</id>
			<spacing>5</spacing>
			<list>
				<id>my-list</id>
				<preferred-width>100</preferred-width>
				<preferred-height>100</preferred-height>
			</list>
			<button>
				<id>btn</id>
				<preferred-width>100</preferred-width>
				<preferred-height>16</preferred-height>
				<text>button text</text>
			</button>
			
			<label>
				<id>copy</id>
				<text>this is some copy text for you</text>
			</label>
			
			<iterator>
				<provider>{binding:items}</provider>
				<label>
					<text><![CDATA[{it:key} > {it:value}]]></text>
				</label>
			</iterator>
			
			<hbox>
				<spacing>10</spacing>
				<cell>
					<preferred-width>80</preferred-width>
					<preferred-height>80</preferred-height>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model>
						<blend-mode>invert</blend-mode>
					</box-model>
				</cell>
				<cell>
					<preferred-width>80</preferred-width>
					<preferred-height>80</preferred-height>
					<layout>
						<horizontal-align>left</horizontal-align>
						<vertical-align>top</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>
				<cell>
					<preferred-width>80</preferred-width>
					<preferred-height>80</preferred-height>
					<layout>
						<horizontal-align>right</horizontal-align>
						<vertical-align>top</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>
				<cell>
					<preferred-width>80</preferred-width>
					<preferred-height>80</preferred-height>
					<layout>
						<horizontal-align>right</horizontal-align>
						<vertical-align>bottom</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>
				<cell>
					<preferred-width>80</preferred-width>
					<preferred-height>80</preferred-height>
					<layout>
						<horizontal-align>left</horizontal-align>
						<vertical-align>bottom</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>							
			</hbox>
		</vbox>
	</canvas>
</document>