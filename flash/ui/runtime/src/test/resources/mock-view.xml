<?xml version="1.0"?>
<document>
	<canvas>
		<vbox>
			<id>vbox</id>
			<spacing>5</spacing>
			<list>
				<id>my-list</id>
				<width>100</width>
				<height>100</height>
			</list>
			<button>
				<id>btn</id>
				<width>100</width>
				<height>16</height>
				<text>button text</text>
			</button>
			
			<iterator>
				<provider>{binding:items}</provider>
				<label>
					<text><![CDATA[{it:key} > {it:value}]]></text>
				</label>
			</iterator>
			
			<hbox>
				<spacing>10</spacing>
				<cell>
					<width>80</width>
					<height>80</height>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model>
						<blend-mode>invert</blend-mode>
					</box-model>
				</cell>
				<cell>
					<width>80</width>
					<height>80</height>
					<layout>
						<horizontal-align>left</horizontal-align>
						<vertical-align>top</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>
				<cell>
					<width>80</width>
					<height>80</height>
					<layout>
						<horizontal-align>right</horizontal-align>
						<vertical-align>top</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>
				<cell>
					<width>80</width>
					<height>80</height>
					<layout>
						<horizontal-align>right</horizontal-align>
						<vertical-align>bottom</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>
				<cell>
					<width>80</width>
					<height>80</height>
					<layout>
						<horizontal-align>left</horizontal-align>
						<vertical-align>bottom</vertical-align>
					</layout>
					<label styles="lbl">
						<text>Box Model</text>
					</label>
					<box-model />
				</cell>							
			</hbox>
		</vbox>
		
			
			<label>
				<id>copy</id>
				<text>this is some copy text for you</text>
			</label>		
			
		<p id="mock-test-paragraph">this is some copy text for you</p>
	</canvas>
</document>