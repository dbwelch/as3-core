<?xml version="1.0"?>
<document>
	<vbox>
		<sub-heading>
			<id>text-heading</id>
			<styles>package-heading</styles>
			<identifier>text.package</identifier>
		</sub-heading>
		
		<hbox>
			<spacing>25</spacing>
			<vbox>
				<label>
					<styles>element</styles>
					<identifier>elements.heading</identifier>
				</label>
				
				<hbox>
					<heading>
						<identifier>text.examples.heading</identifier>
					</heading>
					<heading>
						<styles>uppercase</styles>
						<identifier>uppercase</identifier>
					</heading>
					<heading>
						<styles>lowercase</styles>
						<identifier>lowercase</identifier>
					</heading>
					<heading>
						<styles>underline</styles>
						<identifier>underline</identifier>
					</heading>
				</hbox>
				
				<hrule />
				
				<label>
					<styles>element</styles>
					<identifier>elements.subheading</identifier>
				</label>				
				
				<hbox>
					<sub-heading>
						<identifier>text.examples.subheading</identifier>
					</sub-heading>
			
					<sub-heading>
						<styles>uppercase</styles>
						<identifier>uppercase</identifier>
					</sub-heading>
					<sub-heading>
						<styles>lowercase</styles>
						<identifier>lowercase</identifier>
					</sub-heading>
					<sub-heading>
						<styles>underline</styles>
						<identifier>underline</identifier>
					</sub-heading>									
				</hbox>
				
				<hrule />
					
				<label>
					<styles>element</styles>
					<identifier>elements.label</identifier>
				</label>
								
				<hbox>
					<label>
						<identifier>text.examples.label</identifier>
					</label>			
					<label>
						<styles>uppercase</styles>
						<identifier>uppercase</identifier>
					</label>
					<label>
						<styles>lowercase</styles>
						<identifier>lowercase</identifier>
					</label>
					<label>
						<styles>underline</styles>
						<identifier>underline</identifier>
					</label>			
				</hbox>
				
				
				<label>
					<identifier>text.label.constrain</identifier>
					<max-width>160</max-width>
				</label>
				
				<hrule />
				
				<label>
					<styles>element</styles>
					<identifier>elements.textinput</identifier>
				</label>				
		
				<text-input>
					<identifier>text.label.constrain</identifier>
				</text-input>
				
				<hrule />
				
				<label>
					<styles>element</styles>
					<identifier>elements.textarea</identifier>
				</label>				
		
				<text-area>
					<identifier>text.label.constrain</identifier>
				</text-area>
			</vbox>	
		
			<vbox>
				<label>
					<styles>element</styles>
					<identifier>elements.paragraph</identifier>
				</label>				
				
				<p>
					<identifier>text.examples.paragraph</identifier>
				</p>
				
				<hrule />
				
				<label>
					<styles>element</styles>
					<identifier>elements.subparagraph</identifier>
				</label>
						
				<p>
					<identifier>text.examples.subparagraph</identifier>
				</p>
				
				<hrule />				
				
				<label>
					<styles>element</styles>
					<identifier>elements.label.html</identifier>
				</label>
				
				<label>
					<identifier>text.examples.subparagraph.html</identifier>
					<html>true</html>
					<max-width>260</max-width>
				</label>
				
				<hrule />
				
				<label>
					<styles>element</styles>
					<identifier>elements.label.border.padding</identifier>
				</label>
				
				<sub-heading>
					<styles>sub-heading-border-example</styles>
					<identifier>text.examples.subheading.border.example</identifier>
					<max-width>260</max-width>
				</sub-heading>
				
				<hrule />				
				
				<label>
					<styles>element</styles>
					<identifier>elements.label.leftborder</identifier>
				</label>
				
				<sub-heading>
					<styles>sub-heading-border-left</styles>
					<identifier>text.examples.subheading.border.left</identifier>
				</sub-heading>
			</vbox>		
		
		</hbox>				
	</vbox>
</document>