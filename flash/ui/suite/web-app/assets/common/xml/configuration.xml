<?xml version="1.0"?>
<configuration>
	
	<!--
	<paths>
		<absolute>true</absolute>
	</paths>
	-->
	
	<locales>
		
		<!-- resources for all locales -->
		<resources>
			
			<rsls>
				<rsl>
					<trusted>true</trusted>
					<url>swf/application-assets.swf</url>
				</rsl>
			</rsls>
			
			<beans>
				<resource>
					<url>css/application.css</url>
				</resource>
				<resource>
					<url>css/graphic-components.css</url>
				</resource>	
				<resource>
					<url>css/custom-view-components.css</url>
				</resource>							
			</beans>
			
			<css>
				<resource>
					<url>css/component-styles.css</url>
				</resource>
				<resource>
					<url>css/scroll-styles.css</url>
				</resource>				
				<resource>
					<url>css/graphic-button-styles.css</url>
				</resource>				
				<resource>
					<url>css/application-styles.css</url>
				</resource>
				<resource>
					<url>css/filters.css</url>
				</resource>
			</css>
			
			<images>
				<resource>
					<url>images/thumbnail-001.jpg</url>
				</resource>
				<resource>
					<url>images/thumbnail-002.jpg</url>
				</resource>				
			</images>
			
			<components>
				<id>components</id>
				<view>
					<id>navigation</id>
					<xml>
						<resource>
							<url>xml/navigation.xml</url>
						</resource>
					</xml>
				</view>
				<view>
					<id>content</id>
					<xml>
						<resource>
							<url>xml/content.xml</url>
						</resource>
					</xml>
				</view>
				<view>
					<id>graphics</id>
					<xml>
						<resource>
							<url>xml/graphics.xml</url>
						</resource>
					</xml>
				</view>	
				<view>
					<id>text</id>
					<xml>
						<resource>
							<url>xml/text.xml</url>
						</resource>
					</xml>
				</view>	
				<view>
					<id>buttons</id>
					<xml>
						<resource>
							<url>xml/buttons.xml</url>
						</resource>
					</xml>
				</view>	
				<view>
					<id>containers</id>
					<xml>
						<resource>
							<url>xml/containers.xml</url>
						</resource>
					</xml>
				</view>	
				<view>
					<id>assets</id>
					<xml>
						<resource>
							<url>xml/assets.xml</url>
						</resource>
					</xml>
				</view>	
				<view>
					<id>images</id>
					<xml>
						<resource>
							<url>xml/images.xml</url>
						</resource>
					</xml>
				</view>
				<view>
					<id>scrollbars</id>
					<xml>
						<resource>
							<url>xml/scrollbars.xml</url>
						</resource>
					</xml>
				</view>
				<view>
					<id>graphic-buttons</id>
					<xml>
						<resource>
							<id>graphic-buttons</id>
							<url>xml/graphic-buttons.xml</url>
						</resource>
					</xml>
				</view>
			</components>
			<messages>
				<resource>
					<url>messages/messages.properties</url>
				</resource>
			</messages>			
		</resources>
		
		<!-- only english -->
		<locale>
			<lang>en</lang>
			<country>GB</country>
		</locale>
		
