<?xml version="1.0"?>
<configuration>
	
	<!--
	<paths>
		<absolute>true</absolute>
	</paths>
	-->
	
	<locales>
		
		<!-- resources for all locales -->
		<resources>
			
			<rsls>
				<rsl>
					<trusted>true</trusted>
					<url>swf/application-assets.swf</url>
				</rsl>
			</rsls>
			
			<beans>
				<resource>
					<url>css/application.css</url>
				</resource>
				<resource>
					<url>css/graphic-components.css</url>
				</resource>				
			</beans>
			
			<css>
				<resource>
					<url>css/component-styles.css</url>
				</resource>
				<resource>
					<url>css/application-styles.css</url>
				</resource>				
			</css>
			
			<components>
				<id>components</id>
				<view>
					<id>graphics</id>
					<xml>
						<resource>
							<url>xml/graphics.xml</url>
						</resource>
					</xml>
				</view>						
			</components>
			
			<messages>
				<resource>
					<url>messages/messages.properties</url>
				</resource>
			</messages>			
		</resources>
		
		<!-- only english -->
		<locale lang="en" country="GB" />
		
	</locales>
	
</configuration>