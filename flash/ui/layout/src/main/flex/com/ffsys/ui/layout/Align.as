package com.ffsys.ui.layout {
	
	/**
	*	Encapsulates constants that represent
	*	alignment positions.
	*
	*	@langversion ActionScript 3.0
	*	@playerversion Flash 9.0
	*
	*	@author Mischa Williamson
	*	@since  20.06.2010
	*/
	public class Align extends Object {
		
		/**
		*	Represents a left align.	
		*/
		public static const LEFT:String = "left";
		
		/**
		*	Represents a top align.	
		*/
		public static const TOP:String = "top";	

		/**
		*	Represents a right align.	
		*/
		public static const RIGHT:String = "right";
		
		/**
		*	Represents a bottom align.
		*/
		public static const BOTTOM:String = "bottom";
		
		/**
		*	Represents a center align.
		*/
		public static const CENTER:String = "center";
	}
}